<div class="post-container">
  <div class="post-header">
    <h1 class="post-title"><%= @post.title %></h1>
    <div class="post-meta">
      <span class="post-date">Posted <%= time_ago_in_words(@post.created_at) %> ago</span>
      <span class="post-author">by <%= @post.user.email %></span>
    </div>
  </div>

  <% if @post.image.attached? %>
    <div class="post-image-container">
      <%= image_tag @post.image, class: "post-image" %>
    </div>
  <% end %>

  <div class="post-content">
    <%= @post.body %>
  </div>

  <div class="post-actions">
    <% if user_signed_in? && current_user == @post.user %>
      <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary" %>
      <%= button_to "Delete", post_path(@post), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
    <% end %>
    <%= link_to "Back", posts_path, class: "btn btn-secondary" %>
  </div>
</div> 